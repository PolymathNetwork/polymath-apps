{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "outDir": "build/dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "~/*": ["*"]
    },
    "plugins": [
      {
        "transform": "../../config/absoluteToRelative.ts",
        "afterDeclarations": true
      }
    ]
  },
  "include": ["../../../node_modules/@machinomy/types-truffle/index.d.ts"],
  "exclude": ["src/specsInit.ts", "build", "node_modules"]
}
