{
  "name": "@polymathnetwork/new-shared",
  "version": "0.0.0",
  "main": "build/dist/index.js",
  "typings": "build/dist/index.d.ts",
  "private": true,
  "scripts": {
    "test": "jest --env=jsdom"
  },
  "dependencies": {
    "bignumber.js": "8.0.1",
    "lodash": "^4.17.11",
    "luxon": "1.10.0",
    "numeral": "^2.0.6"
  },
  "devDependencies": {
    "@babel/core": "7.1.0",
    "@babel/plugin-proposal-class-properties": "7.0.0",
    "@babel/preset-typescript": "7.0.0",
    "@types/luxon": "^1.10.2",
    "@types/node": "^10.12.12",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "8.0.2",
    "typescript": "^3.2.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testMatch": [
      "**/__tests__/**/*.(ts|js)"
    ],
    "testURL": "http://localhost",
    "testPathIgnorePatterns": [
      "build"
    ],
    "transform": {
      "^.+\\.tsx?$": "../../config/babelJestWrapper.js"
    },
    "moduleNameMapper": {
      "~/(.*)": "<rootDir>/src/$1"
    },
    "setupFiles": [
      "<rootDir>/src/testUtils/setupTests.ts"
    ]
  }
}
