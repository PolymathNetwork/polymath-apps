  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "protocol": "inspector",
      "request": "launch",
      "name": "Launch test files with TestCafe",
      "program": "${workspaceRoot}/packages/tests/frontend-core/runner",
      "args": [
        "--metamaskPath",
        "/Users/pasztet/Downloads/metamask-chrome-6.1.0",
        "--src",
        "${relativeFile}"
      ],
      "skipFiles": ["node_modules/**/*", "<node_internals>/**/*"],
      "console": "integratedTerminal",
      "cwd": "${workspaceRoot}"
    }
  ]
}
